FROM buildpack-deps
MAINTAINER Tom Nussbaumer <thomas.nussbaumer@gmx.net>
RUN apt-get update && apt-get install -y  --no-install-recommends \
            autopoint \
            bison \
            gettext \
            gperf \
            less \
            nano \ 
            rsync \
            texinfo \
    && rm -rf /var/lib/apt/lists/*
